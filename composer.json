{
  "name": "andersundsehr/sentry_cron_monitor",
  "description": "Creates sentry cron monitor for all tasks",
  "license": [
    "GPL-2.0-or-later"
  ],
  "type": "typo3-cms-extension",
  "require": {
    "sentry/sentry": "^4.15",
    "typo3/cms-core": "^12.4 || ^13.4",
    "typo3/cms-scheduler": "^12.4 || ^13.4",
    "php": "^8.3 || ^8.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.3",
    "pluswerk/grumphp-config": "^10.1.3",
    "saschaegerer/phpstan-typo3": "^2.1.1",
    "ssch/typo3-rector": "^3.6.2",
    "typo3/testing-framework": "^9.2",
    "andersundsehr/phpstan-git-files": "^10.1.1"
  },
  "autoload": {
    "psr-4": {
      "AUS\\SentryCronMonitor\\": "Classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AUS\\SentryCronMonitor\\Tests\\": "Tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "phpro/grumphp": true,
      "phpstan/extension-installer": true,
      "pluswerk/grumphp-config": true,
      "typo3/class-alias-loader": true,
      "typo3/cms-composer-installers": true
    }
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "sentry_cron_monitor"
    }
  },
  "scripts": {
    "test": "@php ./vendor/bin/phpunit --color=always --testdox --stderr Tests/Unit"
  }
}
